<script>
/* ---------------------------
  Typing animation (stage 2 choice)
---------------------------- */
const phrases = [
  "Student â€¢ Learner â€¢ Builder",
  "Nature lover â€¢ Future developer",
  "Calm design. Golden standards."
];
let tIndex = 0, char = 0;
const typeTarget = document.getElementById('typeTarget');

function typeLoop() {
  const txt = phrases[tIndex];
  if (!typeTarget) return;
  if (char <= txt.length) {
    typeTarget.textContent = txt.slice(0, char);
    char++;
    setTimeout(typeLoop, 60);
  } else {
    // pause then delete
    setTimeout(() => {
      deleteLoop();
    }, 1100);
  }
}
function deleteLoop() {
  const txt = phrases[tIndex];
  if (char >= 0) {
    typeTarget.textContent = txt.slice(0, char);
    char--;
    setTimeout(deleteLoop, 30);
  } else {
    tIndex = (tIndex + 1) % phrases.length;
    setTimeout(typeLoop, 350);
  }
}
document.addEventListener('DOMContentLoaded', ()=> {
  typeLoop();
});

/* ---------------------------
  Contact form handler
---------------------------- */
function handleContact(e){
  e.preventDefault();
  const name = document.getElementById('name').value.trim();
  const email = document.getElementById('email').value.trim();
  const message = document.getElementById('message').value.trim();
  if(!name||!email||!message){ alert('Please complete the form.'); return; }
  // simple feedback (replace with real backend later)
  alert('Thanks ' + name + '! Message received. ðŸŒ¿');
  document.getElementById('contactForm').reset();
}

/* ---------------------------
  CV Download / Preview
  - Generates a simple CV text file (you can replace with a real file)
---------------------------- */
function makeCvContent(){
  const content = [
    "Skywalker - Student & Web Creator",
    "",
    "Contact: (replace with your email / WhatsApp)",
    "",
    "About:",
    "Student learning coding. Interested in web development and nature-based design.",
    "",
    "Skills:",
    "- HTML, CSS, basic JavaScript",
    "- Project teamwork & research",
    "",
    "Projects:",
    "- Land Use Study (school project)",
    "- Mini Portfolio Website",
    "",
    "Interests:",
    "- Gardening & learning about ecosystems",
    "- Creative digital design",
    "",
    "Â© 2025 Skywalker"
  ].join("\\n");
  return content;
}

function downloadCv(){
  const text = makeCvContent();
  const blob = new Blob([text], {type:'text/plain'});
  const url = URL.createObjectURL(blob);
  const a = document.createElement('a');
  a.href = url;
  a.download = 'Skywalker_CV.txt';
  document.body.appendChild(a);
  a.click();
  a.remove();
  URL.revokeObjectURL(url);
}

document.getElementById('downloadCvBtn').addEventListener('click', downloadCv);
document.getElementById('cvOpen').addEventListener('click', function(e){
  e.preventDefault();
  // show a preview in a new window/tab
  const text = makeCvContent();
  const w = window.open('', '_blank');
  w.document.write('<pre style="font-family:monospace;padding:20px;">' + text.replace(/\\n/g,'<br>') + '</pre>');
});

/* ---------------------------
  Share button: uses Web Share API if available
---------------------------- */
document.getElementById('shareBtn').addEventListener('click', async function(e){
  e.preventDefault();
  const shareData = {
    title: 'Skywalker | Portfolio',
    text: 'Check out Skywalkerâ€™s site â€” calm, gold & neat.',
    url: location.href
  };
  if(navigator.share){
    try{ await navigator.share(shareData); }catch(err){ alert('Share cancelled'); }
  } else {
    // fallback: copy url
    navigator.clipboard?.writeText(location.href).then(()=> alert('Link copied to clipboard'), ()=> alert('Copy failed'));
  }
});

/* ---------------------------
  Optional: Smooth highlight for nav links on scroll
---------------------------- */
const navLinks = document.querySelectorAll('nav a[href^="#"]');
function onScrollActive(){
  const fromTop = window.scrollY + 140;
  navLinks.forEach(link=>{
    const id = link.getAttribute('href');
    if(!id || id === '#') return;
    const el = document.querySelector(id);
    if(!el) return;
    if(el.offsetTop <= fromTop && el.offsetTop + el.offsetHeight > fromTop){
      link.style.color = getComputedStyle(document.documentElement).getPropertyValue('--gold2');
    } else {
      link.style.color = '';
    }
  });
}
window.addEventListener('scroll', onScrollActive);
onScrollActive(); // init

/* End of script */
</script>

</body>
  </html>
  
